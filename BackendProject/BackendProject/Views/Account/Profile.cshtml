@model ProfileViewModel
@{
    int dataOrder = 0;
}
<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="/Manage/Assets/img/Background-color-shop.png">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">My Account</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">My Account</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- my account wrapper start -->
    <div class="my-account-wrapper section-padding">
        <div class="container custom-container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- My Account Page Start -->
                    <div class="myaccount-page-wrapper">
                        <!-- My Account Tab Menu Start -->
                        <div class="row">
                            <div class="col-lg-3 col-md-4">
                                <div class="myaccount-tab-menu nav" role="tablist">
                                    <a href="#account-info" class="@(ViewBag.Tab=="Profile"?"active":"")" data-toggle="tab"><i class="fa fa-user"></i>Account Details</a>
                                    <a href="#orders" data-toggle="tab" class="@(ViewBag.Tab=="Orders"?"active":"")"><i class="fa fa-user"></i>Orders</a>
                                    <a asp-action="login" asp-controller="account"><i class="fa fa-sign-out"></i>Logout</a>
                                </div>
                            </div>
                            <!-- My Account Tab Menu End -->
                            <!-- My Account Tab Content Start -->
                            <div class="col-lg-9 col-md-8">
                                <div class="tab-content" id="myaccountContent">
                                    <div class="tab-pane fade" @(ViewBag.Tab=="Orders"?"show active":"") id="orders" role="tabpanel">
                                        <div class="myaccount-content">
                                            <h3>Orders</h3>
                                            <div class="myaccount-table table-responsive text-center">
                                                <table class="table table-bordered">
                                                    <thead class="thead-light">
                                                        <tr>
                                                            <th>Order</th>
                                                            <th>Date</th>
                                                            <th>Status</th>
                                                            <th>Total Item</th>
                                                            <th>Total Amount</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.Orders)
                                                        {
                                                            dataOrder++;
                                                            <tr>
                                                                <td>@dataOrder</td>
                                                                <td>@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                                                                <td>@item.Status</td>
                                                                <td>@item.OrderItems.Count</td>
                                                                <td>$@item.TotalAmount</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    @Html.Partial("_MemberUpdateFormPartial", Model.Member)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
