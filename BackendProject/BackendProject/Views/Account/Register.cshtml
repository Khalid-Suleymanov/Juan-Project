@model MemberRegisterViewModel

<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Login-Register</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- login register wrapper start -->
    <div class="login-register-wrapper section-padding">
        <div class="container">
            <div class="member-area-from-wrap">
                <div class="row justify-content-center ">
                    <div class="col-lg-6">
                        <div class="login-reg-form-wrap">
                            <h2>Register</h2>
                            <form asp-action="register" method="post">
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="FullName">Full Name</label>
                                    <input asp-for="FullName" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="UserName">UserName</label>
                                    <input asp-for="UserName" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="Phone">Phone</label>
                                    <input asp-for="Phone" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>

                                <div class="col-12 mb--20">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                    <input asp-for="ConfirmPassword" class="mb-0 form-control">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- login register wrapper end -->
</main>