@model ProductReview
<div class="tab-pane fade" id="tab_three">
    <form asp-action="review"  method="post" class="review-form">
        <h5>1 review for <span>Chaz Kangeroo Hoodies</span></h5>
        <div class="total-reviews">
            <div class="rev-avatar">
                <img src="~/Manage/Assets/img/avatar.jpg" alt="">
            </div>
            <div class="review-box">
                <div class="col-12">
                <div class="form-group">
                    <label asp-for="Text">Comment</label>
                        <textarea asp-for="Text" cols="30" rows="5" class="form-control"></textarea>
                </div>
            </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label class="col-form-label"><span class="text-danger"></span> Rating</label>
                &nbsp;&nbsp;&nbsp; Bad&nbsp;
                <input type="radio" form="reviewForm" value="1" name="Rate">
                &nbsp;
                <input type="radio" form="reviewForm" value="2" name="Rate">
                &nbsp;
                <input type="radio" form="reviewForm" value="3" name="Rate">
                &nbsp;
                <input type="radio" form="reviewForm" value="4" name="Rate">
                &nbsp;
                <input type="radio" form="reviewForm" value="5" name="Rate" checked>
                &nbsp;Good
            </div>
        </div>
        <input type="hidden" name="productId" value="@Model.ProductId" />
        <div class="buttons">
            <button class="sqr-btn" type="submit">Continue</button>
        </div>
    </form> 
</div>