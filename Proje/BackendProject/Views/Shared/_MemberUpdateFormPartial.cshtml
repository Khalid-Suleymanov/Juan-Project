@model MemberUpdateViewModel



<div class="tab-pane fade show active" id="account-info" role="tabpanel">
    <div class="myaccount-content col-md-10">
        <h3>Account Details</h3>
        <div class="account-details-form">
            <form action="memberupdate" method="post">
                <div class="row ">
                    <div class="single-input-item col-lg-6 mb--30">
                        <input asp-for="FullName" placeholder="Full name" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                    <div class="single-input-item col-lg-6 mb--30">
                        <input asp-for="UserName" placeholder="User name" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="single-input-item col-lg-6 mb--30">
                        <input asp-for="Email" placeholder="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="single-input-item col-lg-6 mb--30">
                        <input asp-for="Phone" placeholder="Phone" />
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                </div>
                <br />
                <br />
                <legend>Password change</legend>
                <hr />
                <div class="row">
                    <div class="single-input-item col-lg-12 mb--30">
                        <input asp-for="CurrentPassword" placeholder="CurrentPassword" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="single-input-item col-lg-6 mb--30">
                        <input asp-for="NewPassword" placeholder="NewPassword" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="single-input-item col-lg-6 mb--30">
                        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="single-input-item col-lg-6 mb--30">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </div>
                </div>
                <div class="single-input-item">
                    <button type="submit" class="check-btn sqr-btn ">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>